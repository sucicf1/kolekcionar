{% extends "::layout.html.twig" %}

{% block container %}
    <a href="{{path('item_index_sort',{'ascOrDesc':'asc','orderParameter':'name'})}}">Poredaj uzlazno po nazivu</a>
    <a href="{{path('item_index_sort',{'ascOrDesc':'desc','orderParameter':'name'})}}">Poredaj silazno po nazivu</a>
    <a href="{{path('item_index_sort',{'ascOrDesc':'asc','orderParameter':'price'})}}">Poredaj uzlazno po cijeni</a>
    <a href="{{path('item_index_sort',{'ascOrDesc':'desc','orderParameter':'price'})}}">Poredaj silazno po cijeni</a>
    <a href="{{path('item_index_sort',{'ascOrDesc':'asc','orderParameter':'qualityPercent'})}}">Poredaj uzlazno po postotcima</a>
    <a href="{{path('item_index_sort',{'ascOrDesc':'desc','orderParameter':'qualityPercent'})}}">Poredaj silazno po postotcima</a>
    <br/><br />
    <a href="{{path('item_add')}}">Dodaj novi predmet</a>
    <br/><br />
    <table>
        <tr>
            <th>Naziv</th>
            <th>Cijena</th>
            <th>Kvaliteta u postotcima</th>
            <th>Mogucnosti</th>
        </tr>
        {% for item in items %}
        <tr>
            <td>{{item.name}}</td>
            <td>{{item.price}}</td>
            <td>{{item.qualityPercent}}</td>
            <td><a href="{{path('item_edit',{'id':item.id})}}">Uredi</a></td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}